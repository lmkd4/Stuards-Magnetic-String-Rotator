// C++ code
#include <Servo.h>

// button pins 
const int songPin = 8;
const int servoPin = 12;

// initial button & servo states
int songButton = 0;
int servoButton = 0;

// servo positions!
int startingPos = 0;
int fishingPos = 180;

// create an instance of a servo motor with a fun name
Servo funMotor;

void setup()
{
  // LED & music pins
  pinMode(2, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);

  // attach servo control pin
  funMotor.attach(11);

  // button control pins
  pinMode(songPin, INPUT);
  pinMode(servoPin, INPUT);
}

// ran 
