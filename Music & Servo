// C++ code
#include <Servo.h>

// button pins, subject to change!
const int songPin = 8;
const int servoPin = 11;

// button & servo states
int songButton = 0;
int servoButton = 0;

int startingPos = 0;
int fishingPos = 180;

Servo funMotor;

void setup()
{
  // lights & music pins
  pinMode(2, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);

  // servo control pin
  pinMode(7, OUTPUT);
  funMotor.attach(10);

  //button control pins
  pinMode(songPin, INPUT);
  pinMode(servoPin, INPUT);

  // serial monitor intialization
  Serial.begin(9600);
}

